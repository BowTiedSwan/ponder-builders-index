{
  "dashboard": {
    "id": null,
    "title": "Ponder MorpheusAI Overview",
    "description": "Comprehensive monitoring dashboard for Ponder blockchain indexers",
    "tags": ["ponder", "blockchain", "morpheusai", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values(up{job=~\"ponder-.*\"}, job)",
          "refresh": 1,
          "includeAll": true,
          "multi": true,
          "allValue": ".*",
          "current": {
            "text": "All",
            "value": "$__all"
          }
        },
        {
          "name": "instance",
          "type": "query", 
          "query": "label_values(up{job=~\"$service\"}, instance)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Service Status Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"ponder-.*\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "value": "0",
                "text": "DOWN"
              },
              {
                "type": "value", 
                "value": "1",
                "text": "UP"
              }
            ],
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "background"
        },
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Request Rate (req/sec)",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(ponder_http_requests_total[$__rate_interval])) by (job)",
            "legendFormat": "{{job}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 0}
      },
      {
        "id": 3,
        "title": "Response Time (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(ponder_http_request_duration_seconds_bucket[$__rate_interval])) by (le, job))",
            "legendFormat": "{{job}} p95"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "logBase": 1
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 0}
      },
      {
        "id": 4,
        "title": "Memory Usage",
        "type": "graph", 
        "targets": [
          {
            "expr": "container_memory_usage_bytes{name=~\"ponder-.*\"} / 1024 / 1024",
            "legendFormat": "{{name}}"
          }
        ],
        "yAxes": [
          {
            "label": "MB"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 6}
      },
      {
        "id": 5,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\"ponder-.*\"}[$__rate_interval]) * 100",
            "legendFormat": "{{name}}"
          }
        ],
        "yAxes": [
          {
            "label": "Percent",
            "max": 100
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 6}
      },
      {
        "id": 6,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "ponder_database_connections_active",
            "legendFormat": "{{job}} Active"
          },
          {
            "expr": "ponder_database_connections_idle", 
            "legendFormat": "{{job}} Idle"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 12}
      },
      {
        "id": 7,
        "title": "Indexing Progress",
        "type": "graph",
        "targets": [
          {
            "expr": "ponder_latest_block_number",
            "legendFormat": "{{job}} Latest Block"
          }
        ],
        "yAxes": [
          {
            "label": "Block Number"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 12}
      },
      {
        "id": 8,
        "title": "Event Processing Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ponder_events_processed_total[$__rate_interval])",
            "legendFormat": "{{job}} Events/sec"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 12}
      },
      {
        "id": 9,
        "title": "Error Rates",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ponder_http_requests_total{status=~\"5..\"}[$__rate_interval])",
            "legendFormat": "{{job}} HTTP 5xx"
          },
          {
            "expr": "rate(ponder_database_connection_errors_total[$__rate_interval])",
            "legendFormat": "{{job}} DB Errors"
          },
          {
            "expr": "rate(ponder_rpc_request_errors_total[$__rate_interval])",
            "legendFormat": "{{job}} RPC Errors"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 18}
      },
      {
        "id": 10,
        "title": "Top GraphQL Queries",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (operation_name) (rate(ponder_graphql_requests_total[$__range])))",
            "format": "table",
            "instant": true
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 18}
      }
    ]
  }
}
